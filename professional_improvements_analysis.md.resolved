def transform_y(y_pdf: float) -> float:
    """
    Transform Y coordinate from PDF space to ReportLab space.
    
    Args:
        y_pdf: Y coordinate in PDF space (0 = top)
        
    Returns:
        Y coordinate in ReportLab space (0 = bottom)
        
    Formula:
        Y_reportlab = PAGE_HEIGHT - Y_pdf + Y_GLOBAL_OFFSET
        
    Example:
        >>> transformer = CoordinateTransformer()
        >>> y_pdf = 100.0
        >>> y_reportlab = transformer.transform_y(y_pdf)
        >>> print(f"PDF: {y_pdf} â†’ ReportLab: {y_reportlab}")
        PDF: 100.0 â†’ ReportLab: 745.3
    """
